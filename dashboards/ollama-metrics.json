{
  "title": "Ollama Production Monitoring",
  "uid": "ollama-prod-v1",
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Ollama Up",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        { "expr": "ollama_up{job=\"ollama-llm\"}", "refId": "A" }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 0.5 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Models Available",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "id": 2,
      "targets": [
        { "expr": "ollama_models_total{job=\"ollama-llm\"}", "refId": "A" }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "gauge",
      "title": "GPU Utilization (%)",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "id": 3,
      "targets": [
        {
          "expr": "ollama_gpu_utilization_percent{job=\"ollama-llm\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Utilization Over Time",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 4,
      "targets": [
        {
          "expr": "ollama_gpu_utilization_percent{job=\"ollama-llm\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "axisLabel": "percent", "axisPlacement": "auto" }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Memory Usage (GB)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 5,
      "targets": [
        {
          "expr": "ollama_gpu_memory_used_bytes{job=\"ollama-llm\"} / (1024 * 1024 * 1024)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "axisLabel": "GB", "axisPlacement": "auto" }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    }
  ]
}

