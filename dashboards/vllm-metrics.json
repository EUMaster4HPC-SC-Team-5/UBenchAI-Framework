{
  "title": "vLLM Production Monitoring",
  "uid": "vllm-prod-v2",
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Generation Throughput (tok/s)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "targets": [
        {
          "expr": "vllm:avg_generation_throughput_toks_per_s{job=\"vllm-llm\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisLabel": "tokens/s",
            "axisPlacement": "auto"
          }
        }
      },
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      }
    },
    {
      "type": "timeseries",
      "title": "Prompt Throughput (tok/s)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "id": 2,
      "targets": [
        {
          "expr": "vllm:avg_prompt_throughput_toks_per_s{job=\"vllm-llm\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {"axisLabel": "tokens/s"}
        }
      }
    },
    {
      "type": "stat",
      "title": "Running Requests",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 8},
      "id": 3,
      "targets": [
        {
          "expr": "vllm:num_requests_running{job=\"vllm-llm\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {"calcs": ["lastNotNull"]}
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [{"color": "green", "value": null}]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "GPU Cache (%)",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 8},
      "id": 4,
      "targets": [
        {
          "expr": "vllm:gpu_cache_usage_perc{job=\"vllm-llm\"} * 100",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Waiting Requests",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 8},
      "id": 5,
      "targets": [
        {
          "expr": "vllm:num_requests_waiting{job=\"vllm-llm\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Token Processing Rate",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14},
      "id": 6,
      "targets": [
        {
          "expr": "rate(vllm:prompt_tokens_total{job=\"vllm-llm\"}[1m])",
          "legendFormat": "Prompt tokens/s",
          "refId": "A"
        },
        {
          "expr": "rate(vllm:generation_tokens_total{job=\"vllm-llm\"}[1m])",
          "legendFormat": "Generation tokens/s",
          "refId": "B"
        }
      ],
      "options": {
        "legend": {"displayMode": "list", "placement": "bottom"}
      },
      "fieldConfig": {
        "defaults": {
          "custom": {"axisLabel": "tokens/s"}
        }
      }
    }
  ]
}